<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="view_don_vi_tree" model="ir.ui.view">
            <field name="name">nhan_su.don_vi.tree</field>
            <field name="model">nhan_su.don_vi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_don_vi"/>
                    <field name="ten_don_vi"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_don_vi_form" model="ir.ui.view">
            <field name="name">nhan_su.don_vi.form</field>
            <field name="model">nhan_su.don_vi</field>
            <field name="arch" type="xml">
                <form string="Đơn vị">
                    <sheet>
                        <group>
                            <field name="ma_don_vi"/>
                            <field name="ten_don_vi"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_don_vi" model="ir.actions.act_window">
            <field name="name">Danh mục đơn vị</field>
            <field name="res_model">nhan_su.don_vi</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
