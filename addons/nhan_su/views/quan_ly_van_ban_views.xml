<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_loai_van_ban" model="ir.actions.act_window">
        <field name="name">Loại văn bản</field>
        <field name="res_model">quan_ly_van_ban.loai</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_van_ban_den_tree" model="ir.ui.view">
        <field name="name">quan_ly_van_ban.den.tree</field>
        <field name="model">quan_ly_van_ban.den</field>
        <field name="arch" type="xml">
            <tree string="Văn bản đến">
                <field name="so_ky_hieu"/>
                <field name="tieu_de"/>
                <field name="ngay_den"/>
                <field name="loai_van_ban_id"/>
                <field name="nguoi_tiep_nhan_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <record id="view_van_ban_den_search" model="ir.ui.view">
        <field name="name">quan_ly_van_ban.den.search</field>
        <field name="model">quan_ly_van_ban.den</field>
        <field name="arch" type="xml">
            <search>
                <field name="so_ky_hieu"/>
                <field name="tieu_de"/>
                <filter string="Hôm nay" name="today" domain="[('ngay_den', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="1" string="Nhóm theo">
                    <filter string="Loại văn bản" name="group_by_type" context="{'group_by':'loai_van_ban_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_van_ban_den" model="ir.actions.act_window">
        <field name="name">Văn bản đến</field>
        <field name="res_model">quan_ly_van_ban.den</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_van_ban_di_form" model="ir.ui.view">
        <field name="name">quan_ly_van_ban.di.form</field>
        <field name="model">quan_ly_van_ban.di</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="so_ky_hieu"/>
                            <field name="loai_van_ban_id"/>
                            <field name="ngay_ban_hanh"/>
                        </group>
                        <group>
                            <field name="nguoi_soan_thao_id"/>
                            <field name="noi_nhan"/>
                            <field name="file_dinh_kem"/>
                        </group>
                    </group>
                    <group>
                        <field name="tieu_de"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_van_ban_di" model="ir.actions.act_window">
        <field name="name">Văn bản đi</field>
        <field name="res_model">quan_ly_van_ban.di</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_quan_ly_van_ban_root" name="Quản lý văn bản" sequence="10"/>

    <menuitem id="menu_van_ban_den" name="Văn bản đến" parent="menu_quan_ly_van_ban_root" action="action_van_ban_den" sequence="1"/>
    <menuitem id="menu_van_ban_di" name="Văn bản đi" parent="menu_quan_ly_van_ban_root" action="action_van_ban_di" sequence="2"/>
    
    <menuitem id="menu_cau_hinh" name="Cấu hình" parent="menu_quan_ly_van_ban_root" sequence="100"/>
    <menuitem id="menu_loai_van_ban" name="Loại văn bản" parent="menu_cau_hinh" action="action_loai_van_ban"/>
</odoo>