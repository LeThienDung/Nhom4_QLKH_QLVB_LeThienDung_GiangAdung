<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_cham_cong_tree" model="ir.ui.view">
        <field name="name">nhan_su.cham_cong.tree</field>
        <field name="model">nhan_su.cham_cong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <field name="ngay"/>
                <field name="gio_vao"/>
                <field name="gio_ra"/>
                <field name="so_gio_lam"/>
                <field name="di_muon"/>
                <field name="ve_som"/>
                <field name="ot"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_cham_cong_form" model="ir.ui.view">
        <field name="name">nhan_su.cham_cong.form</field>
        <field name="model">nhan_su.cham_cong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nhan_vien_id"/>
                        <field name="ngay"/>
                    </group>

                    <group>
                        <field name="gio_vao"/>
                        <field name="gio_ra"/>
                    </group>

                    <group>
                        <field name="so_gio_lam" readonly="1"/>
                        <field name="ot" readonly="1"/>
                    </group>

                    <group>
                        <field name="di_muon" readonly="1"/>
                        <field name="ve_som" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_cham_cong" model="ir.actions.act_window">
        <field name="name">Chấm công</field>
        <field name="res_model">nhan_su.cham_cong</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
