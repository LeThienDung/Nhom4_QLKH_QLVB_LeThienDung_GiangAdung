<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cham_cong_tree" model="ir.ui.view">
        <field name="name">cham.cong.tree</field>
        <field name="model">nhan.su.cham.cong</field>
        <field name="arch" type="xml">
            <tree string="Bảng Chấm Công">
                <field name="ngay"/>
                <field name="nhan_vien_id"/>
                <field name="gio_vao"/>
                <field name="gio_ra"/>
                <field name="so_gio_lam"/>
                <field name="tien_phat"/>
                <field name="tien_ot"/>
            </tree>
        </field>
    </record>

    <record id="view_cham_cong_form" model="ir.ui.view">
        <field name="name">cham.cong.form</field>
        <field name="model">nhan.su.cham.cong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nhan_vien_id"/>
                        <field name="ngay"/>
                    </group>
                    <group col="4">
                        <field name="gio_vao"/>
                        <field name="gio_ra"/>
                    </group>
                    <group string="Kết quả">
                        <field name="so_gio_lam"/>
                        <field name="tien_phat"/>
                        <field name="tien_ot"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cham_cong" model="ir.actions.act_window">
        <field name="name">Chấm Công</field>
        <field name="res_model">nhan.su.cham.cong</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cham_cong" name="Chấm công hàng ngày" parent="menu_root" action="action_cham_cong" sequence="10"/>
</odoo>