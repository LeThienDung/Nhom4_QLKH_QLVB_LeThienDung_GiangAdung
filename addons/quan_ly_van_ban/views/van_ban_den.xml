<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van_ban_den</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form string="Quản lý Văn bản Đi">
                    <sheet>
                        <!-- Tiêu đề -->
                        <div class="oe_title">
                            <h2 class="text-primary" style="font-size: 25px; font-weight: bold;">
                                Văn bản đến</h2>
                        </div>

                        <!-- Thông tin chung -->
                        <div class="card p-3 shadow-sm mb-3">
                            <group col="4">
                                <field name="so_hieu" class="o_form_required" />
                                <field name="tieu_de" />
                                <field name="trich_yeu" />
                            </group>
                        </div>
                        <!-- thong tin noi gui, nhan -->
                        <div class="card p-3 shadow-sm mb-3">
                            <group col="4">
                                <field name="co_quan_ban_hanh" />
                                <field name="ngay_den" />
                                <field name="id_nguoi_nhan" />
                                <field name="id_co_quan_nhan" />
                            </group>
                        </div>


                        <!-- thong tin  -->
                        <div class="card p-3 shadow-sm mb-3">
                            <group col="4">
                                <field name="id_do_mat" />
                                <field name="id_nam" />
                                <field name="ho_so" />
                                <field name="id_loai_van_ban" />
                            </group>
                        </div>

                        <!-- File đính kèm -->
                        <div class="card p-3 shadow-sm">
                            <h3 class="text-secondary"> File đính kèm</h3>
                            <group col="4">
                                <field name="tep_dinh_kem" widget="pdf_viewer" />
                            </group>
                        </div>

                        <!-- Ghi chú hoặc nội dung chi tiết -->
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_van_ban_den_tree" model="ir.ui.view">
            <field name="name">van_ban_den</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="so_hieu" />
                    <!-- <field name="trich_yeu" /> -->
                    <field name="tieu_de" />
                    <field name="ho_so" />
                    <field name="id_loai_van_ban" />
                    <field name="id_do_mat" />
                    <!-- <field name="id_nam" /> -->
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="van_ban_den_search">
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <search>
                    <field name="so_hieu" />
                    <field name="trich_yeu" />
                    <field name="tieu_de" />
                    <field name="id_loai_van_ban" />
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_van_ban_den" model="ir.actions.act_window">
            <field name="name">Quản lý Văn Bản Đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_den_search" />
        </record>
    </data>
</odoo>